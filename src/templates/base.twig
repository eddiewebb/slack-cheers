    <![endif]-->
  </head>

  <body>
    <div class="jumbotron">
      <div class="container">
        {% if flash.error %}
          <div class="alert alert-warning">{{flash.error}}</div>
        {% endif %}
        {% if flash.success %}
          <div class="alert alert-success">{{flash.success}}</div>
        {% endif %}

        {% block content %}
          <!-- content provided by child templates which exentend this file -->
        {% endblock %}
      </div>
    </div>
  </body>
</html>
